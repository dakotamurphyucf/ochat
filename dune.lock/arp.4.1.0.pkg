(version 4.1.0)

(build
 (all_platforms
  ((action
    (progn
     (when %{pkg-self:dev} (run dune subst))
     (run dune build -p %{pkg-self:name} -j %{jobs}))))))

(depends
 (all_platforms
  (ocaml
   dune
   cstruct
   ipaddr
   macaddr
   logs
   mirage-sleep
   lru
   lwt
   duration
   ethernet
   fmt)))

(source
 (fetch
  (url https://github.com/mirage/arp/releases/download/v4.1.0/arp-4.1.0.tbz)
  (checksum
   sha256=02f8f1bde52049104d85942f0a9d686be25f117488ae89c40a4e27368b3c865d)))
